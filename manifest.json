{
  "manifest_version": 2,
  "name": "Pagination Navigation Shortcuts",
  "version": "1.0",
  "permissions": ["activeTab", "tabs"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "commands": {
    "next_page": {
      "suggested_key": {
        "default": "Ctrl+N"
      },
      "description": "Go to the next page"
    },
    "previous_page": {
      "suggested_key": {
        "default": "Ctrl+P"
      },
      "description": "Go to the previous page"
    }
  },
  "browser_action": {
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    },
    "default_popup": "popup.html"
  }
}
